{
  "name": "gitCodeShare",
  "version": "0.0.1",
  "manifest_version": 2,
  "author": "jsdev.kr",
  "description": "Share your code beautifully. Anywhere.",
  "homepage_url": "https://github.com/kosslab-kr/gitCodeShare.com",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "gitCodeShare",
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "js": ["src/index.js"],
      "css": ["css/facebook-popup.css"],
      "matches": ["*://*.facebook.com/*", "*://localhost/*"],
      "all_frames": true
    }
  ],
  "permissions": ["storage", "tabs", "activeTab", "*://*.facebook.com/*", "*://*.localhost:*/*"],
  "web_accessible_resources": ["src/frame.html", "images/*"]
}
